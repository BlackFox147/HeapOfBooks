<Window x:Class="CodeHeapOfBooks.View.ConfirmMessageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeHeapOfBooks.View"
        mc:Ignorable="d"
        Title="ConfirmMessageView" Height="145" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        
        <TextBlock Grid.Row="0" MinWidth="250" Text="{Binding Message}"></TextBlock>

        <WrapPanel Grid.Row="1" VerticalAlignment="Bottom"  HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">OK</Button>
                <Button IsCancel="True" MinWidth="60">Отмена</Button>
            </WrapPanel>   
        

    </Grid>
   
</Window>
