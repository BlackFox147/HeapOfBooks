<UserControl x:Class="CodeHeapOfBooks.View.ListDocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeHeapOfBooks.ViewModel"
             xmlns:viewModels="clr-namespace:CodeHeapOfBooks.ViewModel"
             xmlns:views1="clr-namespace:CodeHeapOfBooks.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">   
    <Grid>
        <TabControl Margin="20" x:Name="tabCategory"
                ItemsSource="{Binding Path=ListOpenCollection}"
                    SelectedItem="{Binding TabIndex, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, IsAsync=True}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <HeaderedContentControl Header="{Binding Header}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding ContentTab, Mode=TwoWay}" />                    
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>
